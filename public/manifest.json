{
    "name": "extension name",
    "description": "extension description",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "32": "images/icon_32.png",
        "48": "images/icon_48.png"
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "images/icon_32.png"
        }
    }
}